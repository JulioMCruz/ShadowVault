{
  "manifest_version": 3,
  "name": "ShadowVault",
  "description": "Secure password manager with Web3 integration and blockchain-backed security",
  "version": "1.0.0",
  "action": {
    "default_popup": "index.html",
    "default_title": "ShadowVault - Secure Password Manager"
  },
  "permissions": [
    "storage",
    "activeTab",
    "tabs",
    "scripting"
  ],
  "host_permissions": [
    "https://*.zircuit.com/*",
    "https://*.ethereum.org/*",
    "https://*.privy.io/*"
  ],
  "icons": {
    "16": "favicon.ico",
    "48": "favicon.ico",
    "128": "favicon.ico"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'; connect-src 'self' https://*.zircuit.com https://*.ethereum.org https://*.privy.io wss://* https://*;"
  },
  "web_accessible_resources": [
    {
      "resources": ["assets/*"],
      "matches": ["<all_urls>"]
    }
  ]
}